{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "background":{
    "scripts": ["borderify.js"]
  },
  "icons": {
    "48": "icons/off.png"
  },
  "page_action": {
    "default_icon": "icons/off.png",
    "browser_style": true
  } ,
  "permissions": [
    "activeTab",
    "tabs"
  ]
  
}